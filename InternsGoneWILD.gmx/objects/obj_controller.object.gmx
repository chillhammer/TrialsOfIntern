    <event eventtype="8" enumb="0">
      <action>
        <libid>1</libid>
        <id>603</id>
        <kind>7</kind>
        <userelative>0</userelative>
        <isquestion>0</isquestion>
        <useapplyto>-1</useapplyto>
        <exetype>2</exetype>
        <functionname></functionname>
        <codestring></codestring>
        <whoName>self</whoName>
        <relative>0</relative>
        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// Draw HUD


for (i = 0; i &lt; ds_list_size(allies); i++) {
    var f = allies[|i];
    draw_set_color(c_blue);
    draw_arrow(f.x, f.y-40, f.x, f.y-28, 32);
}
if (instance_exists(enemy) &amp;&amp; !IsDead(GetPlayer())) {
    draw_set_color(c_maroon);
    draw_arrow(enemy.x, enemy.y-40, enemy.x, enemy.y-28, 32);
    
    if (enemy.hp &lt;= 0 &amp;&amp; enemy.deathTimer &gt; room_speed * 1.5) {
        var b_width = 180;
        var b_height = 40;
        var t_height = b_height * 2 + 16;
        var x1 = room_width*0.5 - b_width * 0.5;
        var x2 = room_width*0.5 + b_width * 0.5;
        var y1 = room_height * 0.5 - t_height *0.5;
        var c = c_black;
        // Hire
        if (point_in_rectangle(mouse_x, mouse_y, x1, y1, x2, y1 + b_height)) {
            c = c_gray;
            if (mouse_check_button_pressed(mb_left)) {
                enemy.ally = true;
                ds_list_add(allies, enemy);
                enemy.deathTimer = 0;
                enemy.hp = enemy.max_hp;
                enemy = noone;
                alarm[0] = room_speed * 2; // Next Round
                exit;
            }
        }
        draw_set_color(c);
        draw_rectangle(x1, y1, x2, y1 + b_height, false);
        draw_set_color(c_white);
        draw_set_halign(fa_center);
        draw_set_valign(fa_middle);
        draw_set_font(fnt_hud_big);
        draw_text(room_width *0.5, y1 + b_height * 0.5, "Hire " + enemy.fighterName);
        
        // Harvest
        y1 += b_height + 16;
        c = c_black;
        if (point_in_rectangle(mouse_x, mouse_y, x1, y1, x2, y1 + b_height)) {
            c = c_gray;
            if (mouse_check_button_pressed(mb_left)) {
                enemy.harvested = true;
                enemy = noone;
                alarm[0] = room_speed * 2; // Next Round
                exit;
            }
        }
        draw_set_color(c);
        draw_rectangle(x1, y1, x2, y1 + b_height, false);
        draw_set_color(c_white);
        draw_text(room_width *0.5, y1 + b_height * 0.5, "Harvest " + enemy.fighterName);
        
        
        draw_set_valign(fa_top);
    }
}

if (IsDead(GetPlayer() &amp;&amp; instance_exists(GetPlayer()))) {
    if (GetPlayer().deathTimer &gt; 0) {
        
        var b_width = 200;
        var b_height = 40;
        var n_allies = ds_list_size(obj_controller.allies);
        var t_height = b_height * (n_allies+1) + 16 * n_allies;
        var x1 = room_width*0.5 - b_width * 0.5;
        var x2 = room_width*0.5 + b_width * 0.5;
        var y1 = room_height * 0.5 - t_height *0.5;
        var c = c_black;
        // Brainwash allies
        for (i = 0; i &lt; n_allies; i++) {
            c = c_black;
            var f = obj_controller.allies[|i];
            if (point_in_rectangle(mouse_x, mouse_y, x1, y1, x2, y1 + b_height)) {
                c = c_gray;
                if (mouse_check_button_pressed(mb_left)) {
                    
                    with (f) {
                        with (owner)
                            instance_destroy();
                    }
                    
                    with (obj_controller) {
                        var index = ds_list_find_index(allies, f);
                        if (index != -1)
                            ds_list_delete(allies, index);
                    }
                    
                    global.fighterPlayerName = f.fighterName;
                    obj_player_controller.fighter = f;
                    f.owner = obj_player_controller.id;
                    f.ally = true; // Just Making Sure
                    // They shouldn't be dead, perhaps add check here
                    exit;
                }
            }
            draw_set_color(c);
            draw_rectangle(x1, y1, x2, y1 + b_height, false);
            draw_set_color(c_white);
            draw_set_halign(fa_center);
            draw_set_valign(fa_middle);
            draw_set_font(fnt_hud_big);
            draw_text(room_width *0.5, y1 + b_height * 0.5, "Brainwash " + f.fighterName);
            y1 += b_height + 16;
        }
        y1 += 16;
        c = c_black;
        // Restart
        if (point_in_rectangle(mouse_x, mouse_y, x1, y1, x2, y1 + b_height)) {
            c = c_gray;
            if (mouse_check_button_pressed(mb_left)) {
                game_restart();
            }
        }
        draw_set_color(c);
        draw_rectangle(x1, y1, x2, y1 + b_height, false);
        draw_set_color(c_white);
        draw_set_halign(fa_center);
        draw_set_valign(fa_middle);
        draw_set_font(fnt_hud_big);
        draw_text(room_width *0.5, y1 + b_height * 0.5, "Restart Game");
    }
}

if (instance_exists(GetPlayer()) &amp;&amp; !game_win ){
    if (GetPlayer().hp &gt; 0) {
        var x1 = 32;
        var y1 = room_height - 12;
        draw_set_color(c_aqua);
        draw_set_font(fnt_hud);
        draw_rectangle(x1, y1, x1 + 128 * GetPlayer().hp / 100, y1 + 2, false);
        draw_rectangle(x1, y1, x1 + 128, y1 + 2, true);
        draw_set_halign(fa_left);
        draw_text(x1, y1 - 12, "HP:");
    } else {
        draw_set_halign(fa_center);
        draw_set_font(fnt_hud_big);
        draw_set_color(c_white);
        draw_text(room_width * 0.5, room_height - 36, "You failed, intern.");
    }
}

// Win
if (game_win) {
    draw_set_halign(fa_center);
    draw_set_font(fnt_hud_big);
    draw_set_color(c_white);
    draw_text(room_width * 0.5, room_height - 36, "Your journey is complete, intern.");
    
    c = c_black;
    var b_width = 200;
    var b_height = 40;
    var x1 = room_width*0.5 - b_width * 0.5;
    var x2 = room_width*0.5 + b_width * 0.5;
    var y1 = room_height * 0.5 - b_height *0.5;
    // Play again
    if (point_in_rectangle(mouse_x, mouse_y, x1, y1, x2, y1 + b_height)) {
        c = c_gray;
        if (mouse_check_button_pressed(mb_left)) {
            game_restart();
        }
    }
    draw_set_color(c);
    draw_rectangle(x1, y1, x2, y1 + b_height, false);
    draw_set_color(c_white);
    draw_set_halign(fa_center);
    draw_set_valign(fa_middle);
    draw_set_font(fnt_hud_big);
    draw_text(room_width *0.5, y1 + b_height * 0.5, "Play Again");
}

// Trial Counter
draw_set_halign(fa_right);
draw_set_color(c_white);
draw_set_font(fnt_hud);
draw_text(room_width - 32, room_height - 12, "Trial " + string(trial));
draw_set_halign(fa_left);
</string>
