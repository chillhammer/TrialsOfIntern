            <string>/// SLow MO

// Slow if player dead
if (IsDead(GetPlayer())) {
    if (game_speed &gt; 0.25) game_speed = 0.25;
    game_speed = lerp(game_speed, 0, 0.05);
} else {
    if (keyboard_check(vk_shift)) {
